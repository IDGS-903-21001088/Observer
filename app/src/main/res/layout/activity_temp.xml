<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_temp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_observacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:paddingEnd="8dp"
                android:weightSum="1">

                <!-- Logo y nombre -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/logo_fondo"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/CircularImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observer"
                        android:textColor="@android:color/holo_green_light"
                        android:paddingStart="10dp"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Botón menú derecho -->
                <ImageButton
                    android:id="@+id/btnMenuObservacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Menú"
                    app:tint="@android:color/white"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- Contenido -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Texto sobre la imagen -->
                <TextView
                    android:id="@+id/tituloModulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Módulo de Temperatura"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_light"
                    android:gravity="center"
                    android:layout_marginBottom="30dp" />

                <!-- Imagen + botones -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgSensor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/imagen"
                        android:scaleType="fitCenter" />

                    <!-- Botón zona A -->

                    <!-- Botón zona B -->

                    <Button
                        android:id="@+id/btnZonaA"
                        android:layout_width="100dp"
                        android:layout_height="81dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/boton_redondo_transparente"
                        android:backgroundTint="#6600FF00"
                        android:text="Zona A"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnZonaB"
                        android:layout_width="wrap_content"
                        android:layout_height="118dp"
                        android:layout_marginStart="197dp"
                        android:layout_marginTop="160dp"
                        android:background="@drawable/boton_redondo_transparente"
                        android:backgroundTint="#66FF0000"
                        android:text="Zona B"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <!-- Info de Zona A -->
                <LinearLayout
                    android:id="@+id/layoutInfoZonaA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/fondo_info_contenedor">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zona: A"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor: DHT11-A"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperatura: 32.0 °C"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Info de Zona B -->
                <LinearLayout
                    android:id="@+id/layoutInfoZonaB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/fondo_info_contenedor">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zona: B"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor: DHT11-B"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperatura: 24.5 °C"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_temp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/black"
        app:menu="@menu/menu_interno"
        app:itemTextColor="@android:color/white" />
</androidx.drawerlayout.widget.DrawerLayout>